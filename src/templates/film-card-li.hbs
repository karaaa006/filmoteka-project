{{#each this}}
<li class="movie-list__card" data-movie-id="{{id}}" id="film-card-template">

<div class="card-img__thumb">
    {{#if poster_path}}<img class="movie-img" loading="lazy"
      srcset="https://image.tmdb.org/t/p/w342{{poster_path}} 1x, https://image.tmdb.org/t/p/w780{{poster_path}} 2x"
      src="https://image.tmdb.org/t/p/w342{{poster_path}}" alt="{{#if title}}{{title}}{{else}}{{name}}{{/if}}">
      {{else}}<img class="movie-img" loading="lazy" src="https://raw.githubusercontent.com/karaaa006/filmoteka-project/main/src/images/no-poster.png" alt="No poster">
    {{/if}}
</div>

<div class="card__content">
  {{#if title}}
  <h3 class="card__title">{{title}}</h3>
  {{else}}
  <h3 class="card__title">{{name}}</h3>
  {{/if}}
  <p class="card__info">
    {{#if genre_ids}}<span class="genres-list" title="{{genre_ids}}">{{genre_ids}}</span>
      {{else}}<span class="genres-list">----</span>
    {{/if}}
    <span class="line"></span>
    {{#if release_date}}<span class="movie-date">{{release_date}}</span>
      {{else}}<span class="movie-date">----</span>
    {{/if}}
    
    {{#if vote_average}}<span class="movie-rating {{rating_color}}">{{vote_average}}</span>
      {{else}}<span class="movie-rating {{rating_color}}">-</span>
    {{/if}}
  </p>
 
</div>
<div class="lds-ellipsis non-active"><div></div><div></div><div></div>
</li>
{{/each}}

